<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <handlers>
            <add name="httpPlatformHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified" requireAccess="Script" />
        </handlers>
        <httpPlatform forwardWindowsAuthToken="true" stdoutLogEnabled="true" stdoutLogFile=".\django.log" startupTimeLimit="20" processPath=".\.venv\Scripts\python.exe" arguments="-m uvicorn --port %HTTP_PLATFORM_PORT% --interface wsgi sample_project.wsgi:application">
        </httpPlatform>
        <security>
            <authentication>
                <windowsAuthentication enabled="true" />
                <anonymousAuthentication enabled="false" />
            </authentication>
        </security>
    </system.webServer>
</configuration>
